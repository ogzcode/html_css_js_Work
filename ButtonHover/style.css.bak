* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: sans-serif;
}

body {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
	background: rgb(0,0,20);
}

.container {
	display: grid;
	grid-template-columns: 1fr 1fr;
	grid-template-rows: 1fr 1fr;
}

.box {
	margin: 40px;
	text-transform: uppercase;
	font-size: 40px;
}

.hover {
	text-decoration: none;
	color: white;
	position: relative;
	padding: 5px;
}

.btn1::after {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #f093fb, #f5576c);
	bottom: 0%; 
	right: 0%;
	border-radius: 5px;
	transition: all .5s ease;
	
}
.btn1:hover::after {
	width: 100%;
}


.btn2::after {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #4facfe, #00f2fe);
	bottom: 0%; 
	left: 0%;
	border-radius: 5px;
	transition: all .5s ease;
	
}

.btn2::before {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #00f2fe, #4facfe);
	top: 0%; 
	right: 0%;
	border-radius: 5px;
	transition: all 500ms ease;
	
}
.btn2:hover::after, .btn2:hover::before {
	width: 100%;

}


.btn3::after {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #0ba360, #3cba96);
	bottom: 0%; 
	left: 0%;
	border-radius: 5px;
	transition: all .5s ease;
	
}
.btn3::before {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #3cba96, #0ba360);
	top: 0%; 
	right: 0%;
	border-radius: 5px;
	transition: all .5s ease;
	
}
.btn3:hover::after {
	width: 50%;
}
.btn3:hover::before {
	width: 50%;
}

.btn4::after {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #6a11cb, #2575fc);
	bottom: 0%; 
	left: 100%;
	border-radius: 5px;
	transition: all 500ms ease;
	
}
.btn4::before {
	content: "";
	width: 0%;
	height: 8px;
	position: absolute;
	background-image: linear-gradient(to left, #6a11cb, #2575fc);
	top: 0%; 
	right: 100%;
	border-radius: 5px;
	transition: all 500ms ease;
	
}
.btn4:hover::after {
	width: 25%;
	left: 0%;
}
.btn4:hover::before {
	width: 25%;
	right: 0%;
}